<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EditText for Reminder Title -->
        <EditText
            android:id="@+id/reminderTitleEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reminder Title"
            android:inputType="text"
            android:fontFamily="sans-serif-condensed"
            android:padding="12dp"
            android:textColor="#00BCD4"
            android:textColorHint="#00BCD4"
            android:textSize="16sp" />

        <!-- Start Time Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start Time"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#00BCD4"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/startTimeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"/>

        <!-- End Time Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="End Time"
            android:textColor="#00BCD4"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/endTimeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"/>

        <!-- Remind me every Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Remind me every:"
            android:textSize="16sp"
            android:textColor="#00BCD4"/>

        <Spinner
            android:id="@+id/remindEverySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
