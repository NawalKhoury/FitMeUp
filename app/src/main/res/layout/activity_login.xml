<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/re1rcny7jnle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingTop="55dp"
        android:paddingBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rg1rzrdrokic"
                android:textColor="#8E98AC"
                android:textSize="40sp"
                android:layout_marginBottom="41dp"
                android:layout_marginStart="76dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="FitMeUp" />

            <LinearLayout
                android:id="@+id/rf8onqo250ds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="78dp"
                android:layout_marginHorizontal="47dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r419ttr4noul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Health, Our Mission!"
                    android:textColor="#24CEF4"
                    android:textSize="25sp" />
            </LinearLayout>

            <!-- Username Input -->
            <LinearLayout
                android:id="@+id/r8cot4nsdtxg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:paddingVertical="24dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="21dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your username"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Password Input -->
            <LinearLayout
                android:id="@+id/rv54c71k4ovc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:paddingVertical="23dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="31dp"
                android:layout_marginHorizontal="22dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter your password"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/rm032iqzqkza"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/showpass" />
            </LinearLayout>

            <!-- Forgot Password Link -->
            <TextView
                android:id="@+id/rvpdl4ik3hh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginBottom="59dp"
                android:text="Forgot Password?"
                android:textColor="#F14336"
                android:textSize="14sp"
                android:onClick="openForgotPasswordActivity" />

            <!-- Login Button -->
            <LinearLayout
                android:id="@+id/r6yu84ag901l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:layout_marginBottom="103dp"
                android:layout_marginHorizontal="81dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/rgngo6kcmde5"
                    android:textColor="#010C0F"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Login"
                    android:background="@drawable/cr8b25cef4"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp" />
            </LinearLayout>

            <!-- Register Link -->
            <TextView
                android:id="@+id/r1t5cvzq2qv5"
                android:textSize="18sp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Donâ€™t have an account? Register Now" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
