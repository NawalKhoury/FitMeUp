<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"

    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SET REMINDER HEADER -->
    <TextView
        android:id="@+id/reminderHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="casual"
        android:text="SET REMINDER"
        android:textColor="#13304A"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/reminderSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="casual"
        android:text="Keep focus on your health!"
        android:textColor="#00BCD4"
        android:textSize="14sp"
        />

    <!-- Scroll View for Reminders -->
    <ScrollView

        android:id="@+id/reminderScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:id="@+id/reminderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Reminder items will go here -->

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button for Adding a Reminder -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addReminderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="32dp"
        android:contentDescription="Add a new reminder"
        android:src="@drawable/add"
        android:tint="@android:color/white"
        android:backgroundTint="#24CEF4" />

</LinearLayout>
