<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rnhlomo33qp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:paddingTop="53dp"
        android:paddingBottom="95dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ry0393wxvuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginBottom="47dp"
                android:text="FitMeUp"
                android:textColor="#8E98AC"
                android:textSize="48sp" />

            <!-- Username Field -->
            <LinearLayout
                android:id="@+id/r58kxi3phcvr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/r0ipsraupits"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="9dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/user" />

                <EditText
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your username"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="text"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Email Field -->
            <LinearLayout
                android:id="@+id/r0e3dppzti0n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="20dp">

                <ImageView
                    android:id="@+id/r98u82ee2lhl"
                    android:layout_width="39dp"
                    android:layout_height="29dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/e1" />

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Confirm Email Field -->
            <LinearLayout
                android:id="@+id/r06frdmuqdygd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="11dp">

                <ImageView
                    android:id="@+id/r98u82ee2lhl"
                    android:layout_width="35dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/e2" />

                <EditText
                    android:id="@+id/confirm_email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm your email"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Password Field -->
            <LinearLayout
                android:id="@+id/rp2t1v0aijtm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="7dp">

                <ImageView
                    android:id="@+id/r7u1au0nuj2o"
                    android:layout_width="31dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pass1" />

                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter your password"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <ImageView
                    android:id="@+id/password_toggle_icon"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/showpass" />
            </LinearLayout>

            <!-- Confirm Password Field -->
            <LinearLayout
                android:id="@+id/r5fupkh5emzf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:orientation="horizontal"
                android:paddingHorizontal="9dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/rsqw58pesbba"
                    android:layout_width="39dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pass2" />

                <EditText
                    android:id="@+id/confirm_password_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Confirm your password"
                    android:inputType="textPassword"
                    android:textColor="#8390A1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/confirm_password_toggle_icon"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/showpass" />
            </LinearLayout>

            <!-- Weight and Height Fields (Numeric Inputs) -->
            <LinearLayout
                android:id="@+id/r66kaozwoljv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="19dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/r5ybfw2mrfi9"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sdadadasw1cr8bf7f8f9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:id="@+id/rav87g8792d"
                        android:layout_width="33dp"
                        android:layout_height="39dp"
                        android:layout_marginEnd="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/weighticon" />

                    <EditText
                        android:id="@+id/weight_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your weight"
                        android:inputType="number"
                        android:textColor="#8390A1"
                        android:textSize="15sp"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>

                <View
                    android:layout_width="51dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/rav78ysqaqub"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sdadadasw1cr8bf7f8f9"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:id="@+id/rgujjs8b9kuc"
                        android:layout_width="43dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/height" />

                    <EditText
                        android:id="@+id/height_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your height"
                        android:inputType="number"
                        android:textColor="#8390A1"
                        android:textSize="15sp"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- Gender Selection (Spinner/Combobox) -->
            <LinearLayout
                android:id="@+id/rnxzm4etwzbk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/r2chbglg18v6"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sdadadasw1cr8bf7f8f9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="18dp">

                    <ImageView
                        android:id="@+id/r8cj2d3xd29p"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="19dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gender" />

                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="#8390A1"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Health Problems Combobox -->
            <LinearLayout
                android:id="@+id/health_problems_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:paddingHorizontal="15dp"
                android:paddingVertical="18dp">

                <ImageView
                    android:id="@+id/health_icon"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="19dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/health_icon" />

                <Spinner
                    android:id="@+id/health_problems_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="#8390A1"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Birth Date Field (Calendar Picker) -->
            <LinearLayout
                android:id="@+id/rrwkjh7gwlbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="21dp"
                android:paddingVertical="19dp">

                <ImageView
                    android:id="@+id/rs0sw2er9yih"
                    android:layout_width="39dp"
                    android:layout_height="28dp"
                    android:src="@drawable/cal" />

                <EditText
                    android:id="@+id/birthdate_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Birth Date (dd/mm/yyyy)"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:inputType="date"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Security Question Field (Spinner) -->
            <LinearLayout
                android:id="@+id/security_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="21dp"
                android:paddingVertical="19dp">

                <ImageView
                    android:id="@+id/question_icon"
                    android:layout_width="39dp"
                    android:layout_height="28dp"
                    android:src="@drawable/question_icon" />

                <Spinner
                    android:id="@+id/security_question_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Additional Text Field for Custom Answer -->
            <LinearLayout
                android:id="@+id/security_answer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sdadadasw1cr8bf7f8f9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="21dp"
                android:paddingVertical="19dp">

                <ImageView
                    android:id="@+id/answer_icon"
                    android:layout_width="39dp"
                    android:layout_height="28dp"
                    android:src="@drawable/answer_icon" />

                <EditText
                    android:id="@+id/security_answer_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your answer"
                    android:textColor="#8390A1"
                    android:textSize="15sp"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Register Button -->
            <LinearLayout
                android:id="@+id/rqu9iln2ftof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="83dp"
                android:background="@drawable/cr8b25cef4"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="19dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/rbtmyggw0cj8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree and Register"
                    android:textColor="#020D10"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
