<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rnhlomo33qp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:paddingTop="53dp"
        android:paddingBottom="95dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ry0393wxvuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="64dp"
                android:layout_marginBottom="47dp"
                android:fontFamily="monospace"

                android:gravity="center"
                android:text="FitMeUp"
                android:textColor="#8E98AC"
                android:textSize="48sp" />

            <!-- Username Field -->
            <LinearLayout
                android:id="@+id/r58kxi3phcvr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/blue_border_edittext"
                android:layout_marginBottom="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/r0ipsraupits"
                    android:layout_width="27dp"
                    android:layout_height="27dp"

                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/user" />

                <EditText
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:textColorHint="#24CEF4"
                    android:layout_height="wrap_content"
                    android:hint="Enter your username"
                    android:textColor="#8390A1"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="text"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Email Field -->
            <LinearLayout
                android:id="@+id/r0e3dppzti0n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border_edittext"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/r98u82ee2lhl"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/e1" />

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:textColorHint="#24CEF4"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:textColor="#8390A1"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Confirm Email Field -->
            <!-- Confirm Email Field (Newly Added) -->
            <LinearLayout
                android:id="@+id/confirm_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border_edittext"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/r98u82ee2lhl_confirm"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/e2" />

                <EditText
                    android:id="@+id/confirm_email_input"
                    android:layout_width="match_parent"
                    android:textColorHint="#24CEF4"
                    android:layout_height="wrap_content"
                    android:hint="Confirm your email"
                    android:textColor="#8390A1"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>
            <!-- Password Field -->
            <LinearLayout
                android:id="@+id/rp2t1v0aijtm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/blue_border_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/r7u1au0nuj2o"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pass1" />

                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter your password"
                    android:textColorHint="#24CEF4"
                    android:textColor="#8390A1"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <ImageView
                    android:id="@+id/password_toggle_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/showpass" />
            </LinearLayout>

            <!-- Confirm Password Field -->
            <LinearLayout
                android:id="@+id/r5fupkh5emzf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/blue_border_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/rsqw58pesbba"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pass2" />

                <EditText
                    android:id="@+id/confirm_password_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Confirm your password"
                    android:textColor="#8390A1"
                    android:textColorHint="#24CEF4"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <ImageView
                    android:id="@+id/confirm_password_toggle_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/showpass" />
            </LinearLayout>

            <!-- Weight and Height Fields (Numeric Inputs) -->
            <LinearLayout
                android:id="@+id/r66kaozwoljv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/r5ybfw2mrfi9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_edittext"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp">

                    <ImageView
                        android:id="@+id/rav87g8792d"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/weighticon" />

                    <EditText
                        android:id="@+id/weight_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="   weight"
                        android:inputType="number"
                        android:textColor="#8390A1"
                        android:textSize="16sp"
                        android:background="@null"
                        android:textColorHint="#24CEF4"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/rav78ysqaqub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_edittext"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp">

                    <ImageView
                        android:id="@+id/rgujjs8b9kuc"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/height" />

                    <EditText
                        android:id="@+id/height_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="   height"
                        android:inputType="number"
                        android:textColor="#8390A1"
                        android:textSize="16sp"
                        android:background="@null"
                        android:textColorHint="#24CEF4"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- Gender Selection (Spinner/Combobox) -->
            <LinearLayout
                android:id="@+id/rnxzm4etwzbk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@drawable/blue_border_edittext"

                >

                <ImageView
                    android:id="@+id/r8cj2d3xd29p"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gender" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColorHint="#DDA0DD"
                    android:textColor="#8390A1"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Health Problems Combobox -->
            <LinearLayout
                android:id="@+id/fitness_goal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_border_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/health_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/health_icon" />

                <Spinner
                    android:id="@+id/fitness_goal_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:textColor="#8390A1"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Birth Date Field (Calendar Picker) -->
            <LinearLayout
                android:id="@+id/rrwkjh7gwlbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_border_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/rs0sw2er9yih"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/cal" />

                <EditText
                    android:id="@+id/birthdate_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Birth Date (dd/mm/yyyy)"
                    android:textColor="#8390A1"
                    android:textSize="16sp"
                    android:textColorHint="#24CEF4"

                    android:inputType="date"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Security Question Field (Spinner) -->
            <LinearLayout
                android:id="@+id/security_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_border_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/question_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"

                    android:src="@drawable/question_icon" />

                <Spinner
                    android:id="@+id/security_question_spinner"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#8390A1"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Additional Text Field for Custom Answer -->
            <LinearLayout
                android:id="@+id/security_answer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_border_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/answer_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/answer_icon" />

                <EditText
                    android:id="@+id/security_answer_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your answer"
                    android:textColor="#8390A1"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:textColorHint="#24CEF4"

                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <!-- Register Button -->
            <LinearLayout
                android:id="@+id/rqu9iln2ftof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="83dp"
                android:background="@drawable/cr8b25cef4"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="19dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/rbtmyggw0cj8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree and Register"
                    android:textColor="#FFFF"
                    android:textSize="19sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>